@using TDR.Enums;
@using TDRDomain.Bases;
@model TDR.ViewModels.Cardapios.UpdateMenuViewModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link href="~/css/BaseError.css" rel="stylesheet" />
</head>

<h1>Editar</h1>

<h4>Cardápio</h4>
<hr />

@if (ViewData["BaseError"] as BaseError is BaseError baseError)
{
    foreach (var error in baseError.Errors)
    {
        <p class="text-danger-base-error">Field: @error.Field - Error: @error.Description</p>
    }
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartVote" class="control-label"></label>
                <input asp-for="StartVote" class="form-control" />
                <span asp-validation-for="StartVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndVote" class="control-label"></label>
                <input asp-for="EndVote" class="form-control" />
                <span asp-validation-for="EndVote" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PeriodFk" value="@ViewData["Period"]" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {

    <script src="~/js/BaseError.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
