@model TDR.ViewModels.Cardapios.CreateMenuViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar </h1>

<h4>Cardápio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>                       
            <div class="form-group">
                <label asp-for="StartVote" class="control-label"></label>
                <input asp-for="StartVote" class="form-control" />
                <span asp-validation-for="StartVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndVote" class="control-label"></label>
                <input asp-for="EndVote" class="form-control" />
                <span asp-validation-for="EndVote" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PeriodFk" value="@ViewData["Period"]" />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
